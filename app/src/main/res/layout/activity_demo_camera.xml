<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frame_layout_camera"
    tools:context="com.example.sonis.customcamera.DemoCamera">

    <ImageButton
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_gravity="bottom|end"
        android:background="@drawable/round_button"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:layout_marginRight="10dp"
        android:id="@+id/button_take_piture"
        android:src="@drawable/ic_camera_alt_black_24dp"
        />

    <ImageButton
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_gravity="bottom|start"
        android:background="@drawable/round_button"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/button_switch_camera"
        android:src="@drawable/ic_crop_rotate_black_24dp"
        />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:visibility="gone"
        android:layout_gravity="center" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/button_flash_on"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:background="@null"
        android:src="@drawable/ic_flash_on_black_24dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="left|top" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/button_flash_off"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:visibility="gone"
        android:background="@null"
        android:src="@drawable/ic_flash_off_black_24dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="left|top" />



</FrameLayout>
